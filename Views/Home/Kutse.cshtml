@{
    ViewBag.Title = "Tere tulemast peole! Kutse";
}

@{
    var kuupaev = DateTime.Now;
    var kuu = kuupaev.Month;
    var imageSrc = "";

    switch (kuu)
    {
        case 1:  // Jan
            imageSrc = "~/Images/uusaasta.jpeg";
            break;
        case 2:  // Veb
            imageSrc = "~/Images/valentine.jpg";
            break;
        case 3:  // Mar
            imageSrc = "~/Images/sokolaadipaev.jpg";
            break;
        case 4:  // Apr
            imageSrc = "~/Images/raha.jpg";
            break;
        case 5:  // Mai
            imageSrc = "~/Images/esimenemai.jpg";
            break;
        case 6:  // Jun
            imageSrc = "~/Images/lastekaitsepaev.jpg";
            break;
        case 7:  // Jul
            imageSrc = "~/Images/koertepaev.jpg";
            break;
        case 8:  // Aug
            imageSrc = "~/Images/arvuusipaev.jpg";
            break;
        case 9:  // Sept
            imageSrc = "~/Images/sokolaadipaev.jpg";
            break;
        case 10:  // Okt
            imageSrc = "~/Images/kakao.jpg";
            break;
        case 11:  // Nov
            imageSrc = "~/Images/mustreede.png";
            break;
        case 12:  // Dets
            imageSrc = "~/Images/jouludjpg.jpg";
            break;
    }

    ViewBag.Title = "Tere tulemast peole! Kutse";
}



<h2 class="text-center" style="color: #007bff; font-size: 2.5rem; margin-bottom: 20px; font-weight: bold;">Kutse</h2>

<div class="jumbotron text-center" style="background-color: #f9f9f9; padding: 40px; border-radius: 10px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);">
    <h1 class="display-4" style="color: #333;">@ViewBag.Greeting, Kallis sõber!</h1>
    <p class="lead" style="font-size: 1.25rem; color: #666;">Ootan sind oma peole! Tule kindlasti!!! Ootan sind!</p>
</div>

<div class="text-center">
    <img src="@Url.Content(imageSrc)" class="img-thumbnail" alt="Kutse pilt" style="width: 400px; height: 400px; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);" />
</div>

<div class="text-center mt-4">
    @Html.ActionLink("Vastan", "Ankeet", "Ankeet", new { @class = "btn btn-primary btn-lg", style = "padding: 12px 24px; font-size: 1.2rem; border-radius: 5px; box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.2);" })
</div>
